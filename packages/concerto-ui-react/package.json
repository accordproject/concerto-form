{
  "name": "@accordproject/concerto-ui-react",
  "version": "0.71.5",
  "dependencies": {
    "@accordproject/concerto-ui-core": "^0.71.5",
    "jsonpath": "1.0.1",
    "lodash.isequal": "^4.5.0"
  },
  "scripts": {
    "build": "rm -rf dist && NODE_ENV=production babel src --out-dir dist --copy-files --ignore '**/*.spec.js,**/*.test.js,samples,__snapshots__,**/*.stories.js'",
    "watch": "npm run build -- --watch",
    "test": "jest --coverage --verbose --color",
    "pretest": "npm run licchk",
    "licchk": "license-check-and-add",
    "prepublishOnly": "npm run build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "devDependencies": {
    "@babel/cli": "7.4.3",
    "@babel/core": "7.4.3",
    "async-wait-until": "1.2.4",
    "babel-jest": "24.7.1",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.11.2",
    "jest": "24.7.1",
    "license-check-and-add": "2.3.6",
    "prop-types": "15.7.2"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/accordproject/concerto-ui.git"
  },
  "jest": {
    "setupFiles": [
      "./setupTests.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
  "license-check-and-add-config": {
    "folder": ".",
    "license": "LICENSE.txt",
    "exact_paths_method": "EXCLUDE",
    "exact_paths": [
      "coverage",
      "LICENSE.txt",
      "node_modules",
      "out",
      ".git",
      ".npmignore",
      ".gitignore",
      "yarn.lock",
      "yarn-error.log",
      "README.md",
      ".babelrc",
      "dist",
      "public",
      "src/__snapshots__",
      ".DS_Store"
    ],
    "file_type_method": "EXCLUDE",
    "file_types": [
      ".yml",
      ".yaml",
      ".zip",
      ".tgz"
    ],
    "insert_license": false,
    "license_formats": {
      "js|njk|pegjs|cto|acl|qry|css": {
        "prepend": "/*",
        "append": " */",
        "eachLine": {
          "prepend": " * "
        }
      },
      "npmrc|editorconfig|txt": {
        "eachLine": {
          "prepend": "# "
        }
      }
    }
  }
}
