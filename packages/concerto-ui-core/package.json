{
  "name": "@accordproject/concerto-ui-core",
  "version": "0.82.9",
  "dependencies": {
    "@accordproject/concerto-core": "^0.82.6"
  },
  "scripts": {
    "build": "rm -rf dist && NODE_ENV=production babel src --out-dir dist --ignore '**/*.spec.js,**/*.test.js,samples,__snapshots__,**/*.stories.js'",
    "watch": "npm run build -- --watch",
    "test": "jest --coverage --verbose --color",
    "pretest": "npm run licchk",
    "licchk": "license-check-and-add",
    "prepublishOnly": "npm run build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-preset-env": "1.7.0",
    "babel-jest": "^24.8.0",
    "jest": "^24.8.0",
    "license-check-and-add": "2.3.6"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "jest": {
    "moduleNameMapper": {
      "\\.(css|scss|sass|styl)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ]
  },
  "license-check-and-add-config": {
    "folder": ".",
    "license": "LICENSE.txt",
    "exact_paths_method": "EXCLUDE",
    "exact_paths": [
      "coverage",
      "LICENSE.txt",
      "node_modules",
      ".nyc-output",
      "out",
      ".git",
      "yarn.lock",
      "yarn-error.log",
      "README.md",
      "babel.config.js",
      ".gitignore",
      "dist",
      "public"
    ],
    "file_type_method": "EXCLUDE",
    "file_types": [
      ".yml",
      ".yaml",
      ".zip",
      ".tgz"
    ],
    "license_formats": {
      "js|njk|pegjs|cto|acl|qry": {
        "prepend": "/*",
        "append": " */",
        "eachLine": {
          "prepend": " * "
        }
      },
      "npmrc|editorconfig|txt": {
        "eachLine": {
          "prepend": "# "
        }
      }
    }
  },
  "gitHead": "bdfdfb0a28e097d30ddb90ddcc5d2715a36f080b"
}
